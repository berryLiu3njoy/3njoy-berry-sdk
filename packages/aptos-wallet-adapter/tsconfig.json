{
  "compilerOptions": {
    "rootDir": "./lib",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "declaration": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "ES2015", "DOM"],
    "skipLibCheck": true
  },
  "include": ["lib"]
}

